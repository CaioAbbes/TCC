@model IEnumerable<TCC.Models.Cartao>

@{
    ViewBag.Title = "List";
}
<link rel="stylesheet" type="text/css" href="~/CSS/List.css">
<section class="contenteTable">
    <h2 class="tableTitle">Lista de Cartões Cadastrados</h2>
    <div class="table-responsive-md">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Numcartao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cvc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Datavalid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.IdCli)
                </th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numcartao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cvc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Datavalid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.IdCli)
                    </td>
                    <td>
                        <span class="iconTable">
                            @Html.ActionLink(" ", "Edit", new { /* id=item.PrimaryKey */ }, new { @Class = "fas fa-edit" })
                        </span>
                    </td>
                    <td>
                        <span class="iconTable">
                            @Html.ActionLink(" ", "Delete", new { Numcartao = item.Numcartao }, new { @Class = "fas fa-eraser" })
                        </span>
                    </td>
                </tr>
            }
        </table>
    </div>
</section>



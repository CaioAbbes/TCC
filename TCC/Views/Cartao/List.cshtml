<section class="contentTable">
    <h2 class="tableTitle">Lista de Produtos Cadastrados</h2>
    <div class="table-responsive-sm">
        <table class="table table-hover">
            <tr class="colorTable">
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Numcartao)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Cvc)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Titular)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Datavalid)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Cliente.IdCli)
                </th>
                <th scope="col"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Numcartao)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Cvc)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Titular)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Datavalid)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Cliente.IdCli)
                    </td>
                    <td scope="row">
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { Numcartao = item.Numcartao }) |
                        @Html.ActionLink("Delete", "Delete", new { Numcartao = item.Numcartao })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>

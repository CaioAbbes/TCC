@model IEnumerable<TCC.Models.Cartao>

@{
    ViewBag.Title = "List";
}
<link rel="stylesheet" type="text/css" href="~/CSS/List.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<section class="contenteTable">
    <h2 class="tableTitle">Lista de Produtos Cadastrados</h2>
    <div class="table-responsive-md">
        <table class="table table-hover">
            <tr class="colorTable">
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Numcartao)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Cvc)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Titular)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Datavalid)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Cliente.IdCli)
                </th>
                <th scope="col">Excluir</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Numcartao)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Cvc)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Titular)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Datavalid)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Cliente.IdCli)
                    </td>
                    <td scope="row">
                        <span class="icontable">
                            @Html.ActionLink(" ", "Delete", new { Numcartao = item.Numcartao }, new { @Class = "fas fa-trash-alt" })
                        </span>
                    </td>
                </tr>
            }
        </table>
    </div>
    @Html.Raw(TempData["msg"])
</section>
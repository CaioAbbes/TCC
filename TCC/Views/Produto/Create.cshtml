@model TCC.Models.Produto

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" type="text/css" href="~/CSS/form.css">
<h1 class="formTitle">Cadastro de Produtos</h1>
@using (Html.BeginForm("Create", "Produto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="wrapper">
        <section class="input-Data">
            @Html.EditorFor(model => model.NomeProd)
            <section class="line"></section>
            @Html.LabelFor(model => model.NomeProd)
        </section>
        @Html.ValidationMessageFor(model => model.NomeProd, "", new { @class = "text-danger" })
    </div>

    <div class="wrapper">
        <section class="input-Data">
            @Html.EditorFor(model => model.ValorProd)
            <section class="line"></section>
            @Html.LabelFor(model => model.ValorProd)
        </section>
        @Html.ValidationMessageFor(model => model.ValorProd, "", new { @class = "text-danger" })
    </div>
    <div class="wrapper">
        <section class="input-Data">
            @Html.EditorFor(model => model.DescProd)
            <section class="line"></section>
            @Html.LabelFor(model => model.DescProd)
        </section>
        @Html.ValidationMessageFor(model => model.DescProd, "", new { @class = "text-danger" })
    </div>

    <div class="wrapper">
        <section class="input-Data">
            @Html.EditorFor(model => model.Observacao)
            <section class="line"></section>
            @Html.LabelFor(model => model.Observacao)
        </section>
        @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
    </div>

    <div class="wrapper">
        <section class="input-Data">
            @Html.EditorFor(model => model.TipoProd)
            <section class="line"></section>
            @Html.LabelFor(model => model.TipoProd)
        </section>
        @Html.ValidationMessageFor(model => model.TipoProd, "", new { @class = "text-danger" })
    </div>

    <div class="wrapper">
        <section class="input-Data">
            @Html.EditorFor(model => model.CategoriaProd)
            <section class="line"></section>
            @Html.LabelFor(model => model.CategoriaProd)
        </section>
        @Html.ValidationMessageFor(model => model.CategoriaProd, "", new { @class = "text-danger" })
    </div>

    <div class="wrapper">
        <section class="input-Data">
            @Html.LabelFor(m => m.Imagem, new { @class = "imgOptionForm" })
            <input type="file" name="ImageUpload" required />
            <section class="line"></section>
        </section>
    </div>

    <div class="bottomForm">
        <section class="bottomFormBottom">
            <button type="submit" id="submit">Cadastrar</button>
        </section>
    </div>
}
@Html.Raw(TempData["msg"])
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/validations_pt-br")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script src="~/Scripts/Myscript.js"></script>
}

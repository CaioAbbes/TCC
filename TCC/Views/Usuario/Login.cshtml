@model TCC.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h2 class="titleLogin">LOGIN</h2>
    <!--row-->
    <div class="wrapper">
        <div class="input-Data">
            @Html.EditorFor(model => model.UsuarioText)
            <section class="line"></section>
            @Html.LabelFor(model => model.UsuarioText)
        </div>
        @Html.ValidationMessageFor(model => model.UsuarioText, "", new { @class = "text-danger" })
    </div>
    <div class="wrapper">
        <div class="input-Data">
            @Html.EditorFor(model => model.Senha)
            <section class="line"></section>
            @Html.LabelFor(model => model.Senha)
        </div>
        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
    </div>
    <section class="button">

        <!-- <input type="submit" value="Create" class="btn btn-default" />
           <a class="submitButton">Entrar</a>
        <button type="submit" class="submitButton">Entrar</button>-->
        @*<input type="submit" value="Create" class="submitButton" />*@
        @*<input type="submit" value="Create" class="btn btn-default" />*@
        <input type="submit" value="Entrar" />
    </section>
    @Html.Raw(TempData["msg"])
    @Html.Raw(TempData["erro"])
}
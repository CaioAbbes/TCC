@model TCC.Models.Usuario

@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" type="text/css" href="~/CSS/Login.css">
<div class="contentLogin">
    <h2 class="titleLogin">LOGIN</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <section class="itens">
            <section class="inputBox">
                @Html.EditorFor(model => model.UsuarioText)
                <section class="label black">
                    @Html.LabelFor(model => model.UsuarioText, htmlAttributes: new { @class = "content-nome" })
                </section>
                @Html.ValidationMessageFor(model => model.UsuarioText, "", new { @class = "text-danger" })
            </section>
        </section>

        <section class="itens">
            <section class="inputBox">
                @Html.EditorFor(model => model.Senha)
                <section class="label black">
                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "content-nome" })
                </section>
            </section>
            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
        </section>

        <div class="button">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    }

</div>
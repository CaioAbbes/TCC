@model IEnumerable<TCC.Models.Cliente>

@{
    ViewBag.Title = "List";
}

<link rel="stylesheet" type="text/css" href="~/CSS/List.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<section class="contenteTable">
    <h2 class="tableTitle">Lista de Produtos Cadastrados</h2>
    <div class="table-responsive-md">
        <table class="table table-hover">
            <tr class="colorTable">
                <th scope="col">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
            <tr class="colorTable">
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.NomeCli)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.EmailCli)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CelCli)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Comp)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.NumEdif)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.QtdPontos)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Imagem)
                </th>
                <th scope="col">Excluir</th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td scope="row">
                >
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td scope="row">
                >
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.NomeCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailCli)
            <td scope="row">
            <td>
                @Html.DisplayFor(modelItem => item.CelCli)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Comp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumEdif)
            <td scope="row">
            <td>
                @Html.DisplayFor(modelItem => item.User)
            <td scope="row">
                @Html.DisplayFor(modelItem => item.QtdPontos)
            </td>
            @* <td>
            @Html.DisplayFor(modelItem => item.Imagem)
        </td>*@

        <td scope="row">
            @if (!string.IsNullOrEmpty(item.Imagem))
            {
                @*<img src="~/Imagens/logo.jpeg"   alt="Image" style="width:100px;height:100px;max-width:100%;height:auto" />*@
                <img src=@string.Format($"/Imagens/{item.Imagem}") alt="Image" style="width:200px;height:200px;max-width:100%;height:auto" />
                @*<img src="@Url.Action(item.Imagem,"Imagens")" alt="Image" style="width:100px;height:100px;max-width:100%;height:auto" />*@
                @*<img src="@Url.Content(item.Imagem)" alt="Image" style="width:100px;height:100px;max-width:100%;height:auto" />*@

            }
        </td>


            @*  @if (item.Imagem != null)
        {
            <td>
                @{
                    string value = System.Text.Encoding.UTF8.GetString(item.Imagem);
                    var imgSrc = String.Format("data:image/png;base64,{0}", value);
                }
                <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
            </td>
        } *@

            <td>
                @Html.ActionLink("Edit", "Edit", new { IdCli = item.IdCli }) |
                @Html.ActionLink("Details", "Details", new { IdCli = item.IdCli }) |
                @Html.ActionLink("Cadastrar Cartao", "Create", "Cartao", new { idCli = item.IdCli }, null)

            </td>
        </tr>
            }

        </table>
    </div>
</section>

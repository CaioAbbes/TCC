                <li class="iconBar"><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
            </nav>
        </div>
    </header>

    <main>
        <div class="navigation background">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon"><i class="fas fa-users"></i></span>
                        <span class="title">Cliente</span>
                    </a>
                </li>
            </ul>
            <ul>
                <li>
                    <a href="#">
                        <span class="icon"><i class="fas fa-id-card"></i></span>
                        <span class="title">Funcionário</span>
                    </a>
                </li>
            </ul>
            <ul>
                <li>
                    <a class="toggle_SubMenu" onclick="toggleSubMenu()">
                        <span class="icon"><i class="fas fa-pepper-hot"></i></span>
                        <span class="title">Produtos</span>
                        <!--"fas fa-sort-down" -->
                    </a>
                </li>
                <section class="collapseSubeMenu hide">
                    <li class="sube_Menu">
                        <a href="">
                            <span class="icon"><i class="fas fa-plus-circle"></i></span>
                            <span class="title">Cadastrar</span>
                        </a>
                    </li>
                    <li class="sube_Menu">
                        <a href="">
                            <span class="icon"><i class="fas fa-sync"></i></span>
                            <span class="title">Atualizar</span>
                        </a>
                    </li>
                    <li class="sube_Menu">
                        <a href="">
                            <span class="icon"><i class="fas fa-minus"></i></span>
                            <span class="title">Deletar</span>
                        </a>
                    </li>
                    <li class="sube_Menu">
                        <a href="list.html">
                            <span class="icon"><i class="fas fa-clipboard-list"></i></span>
                            <span class="title">Listar</span>
                        </a>
                    </li>
                </section>

            </ul>
            <ul>
                <li>
                    <a class="toggle_SubMenu" onclick="toggleSubMenu()">
                        <span class="icon"><i class="fas fa-drumstick-bite"></i></span>
                        <span class="title">Ingredientes</span>
                    </a>
                </li>
                <section class="collapseSubeMenu hide">
                    <li class="sube_Menu">
                        <a href="">
                            <span class="icon"><i class="fas fa-plus-circle"></i></span>
                            <span class="title">Cadastrar</span>
                        </a>
                    </li>
                    <li class="sube_Menu">
                        <a href="">
                            <span class="icon"><i class="fas fa-sync"></i></span>
                            <span class="title">Atualizar</span>
                        </a>
                    </li>
                    <li class="sube_Menu">
                        <a href="">
                            <span class="icon"><i class="fas fa-minus"></i></span>
                            <span class="title">Deletar</span>
                        </a>
                    </li>
                    <li class="sube_Menu">
                        <a href="">
                            <span class="icon"><i class="fas fa-clipboard-list"></i></span>
                            <span class="title">Listar</span>
                        </a>
                    </li>
                </section>
            </ul>
            <ul>
                <li>
                    <a href="#">
                        <span class="icon"><i class="fas fa-ticket-alt"></i></span>
                        <span class="title">Cupons</span>
